<installation version="1.0">

	<info>
		<appname>SQuirreL SQL Client</appname>
		<appsubpath>squirrel-sql-@{squirrelsql.version}</appsubpath>
		<appversion>@{squirrelsql.version}</appversion>
		<authors>
			<author email="gerdwagner@users.sourceforge.net" name="Gerd Wagner" />
			<author email="manningr@users.sourceforge.net" name="Rob Manning" />
			<author email="colbell@users.sourceforge.net" name="Colin Bell" />
		</authors>
		<url>http://www.squirrelsql.org</url>
		<uninstaller write="yes" />
		<javaversion>1.6</javaversion>
	</info>

	<guiprefs height="480" resizable="yes" width="640" />

	<locale>
		<langpack iso3="eng" />
	</locale>

	<resources>
		<res src="installer/other/installer-readme.html" id="HTMLInfoPanel.info" />
		<res src="installer/other/shortcutSpec.xml" id="shortcutSpec.xml" />
		<res src="installer/other/Unix_shortcutSpec.xml" id="Unix_shortcutSpec.xml" />
	</resources>

	<panels>
		<panel classname="HelloPanel" />
		<panel classname="HTMLInfoPanel" />
		<panel classname="TargetPanel" />
		<panel classname="PacksPanel" />
		<panel classname="InstallPanel" />
		<panel classname="ShortcutPanel" />
		<panel classname="FinishPanel" />
	</panels>

	<!--  According to http://groups.google.com/group/izpack-user/browse_thread/thread/2404ab03d63e464a, 
	      we need to include ShellLink_x64.dll for shortcuts to work on 64-bit Windows. -->
	<native type="izpack" name="ShellLink.dll">
		<os family="windows" />
	</native>
	<native type="izpack" name="ShellLink_x64.dll">
		<os family="windows" />
	</native>

	<listeners>
		<listener installer="SummaryLoggerInstallerListener" />
	</listeners>

	<packs>
		<pack name="Base" required="yes" installGroups="Core">
			<description>SQL Client</description>
			<singlefile target="$INSTALL_PATH/plugins/readme.txt" src="launcher/plugins/readme.txt" />

			<!--<singlefile target="$INSTALL_PATH/update/release.xml" src="update-site/release.xml" />-->

			<file targetdir="$INSTALL_PATH" src="core/doc" />
			<!-- <file targetdir="$INSTALL_PATH/doc" src="../../sql12/web-site/faq.html" /> -->
			<!-- <fileset targetdir="$INSTALL_PATH/doc/images" dir="../../sql12/web-site/images"> -->
			<!-- <include name="*.*" /> -->
			<!-- </fileset> -->
			<file targetdir="$INSTALL_PATH" src="launcher/icons" />
			<file targetdir="$INSTALL_PATH" src="launcher/squirrelcli" />
			<file targetdir="$INSTALL_PATH" src="launcher/squirrel-sql.bat" />
			<file targetdir="$INSTALL_PATH" src="launcher/addpath.bat" />
			<file targetdir="$INSTALL_PATH" src="launcher/squirrel-sql.sh" />
			<file targetdir="$INSTALL_PATH" src="launcher/log4j.properties" />
			<file targetdir="$INSTALL_PATH" src="launcher/update-log4j.properties" />

			<file targetdir="$INSTALL_PATH" src="output/dist/squirrel-sql.jar" />
			<fileset targetdir="$INSTALL_PATH/lib" dir="output/dist/lib">
				<include name="*.jar" />
			</fileset>

			<!-- Replace INSTALL_PATH variable -->
			<parsable targetfile="$INSTALL_PATH/squirrel-sql.bat" />
			<parsable targetfile="$INSTALL_PATH/squirrel-sql.sh" type="shell" />
			<parsable targetfile="$INSTALL_PATH/squirrelcli/squirrelcli.bat" />
			<parsable targetfile="$INSTALL_PATH/squirrelcli/squirrelcli.sh" type="shell" />

			<!-- Make Unix script executable. -->
			<executable targetfile="$INSTALL_PATH/squirrel-sql.sh" stage="never" />
			<executable targetfile="$INSTALL_PATH/squirrelcli/squirrelcli.sh" stage="never" />

		</pack>

		<pack name="Standard" required="no" depends="Base" installGroups="StandardPlugins">
			<description>Standard Plugins: Code completion, Graph, Look &amp; Feel, SQL Script, Syntax, DB Copy, DB Diff, Refactoring, Data Import</description>

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/codecompletion.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/codecompletion" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/graph.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/graph" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/laf.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/laf" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/sqlbookmark.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/sqlbookmark" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/sqlscript.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/sqlscript" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/syntax.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/syntax" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/dbcopy.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/dbcopy" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/dbdiff.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/dbdiff" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/refactoring.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/refactoring" />

			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/dataimport.jar" />
			<file targetdir="$INSTALL_PATH/plugins" src="output/dist/plugins/dataimport" />

		</pack>


