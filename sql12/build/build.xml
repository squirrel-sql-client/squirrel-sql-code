		</copy>	
		<copy todir="${squirrel.home.dir}/doc" >
			<fileset dir="./doc" >
				<include name="**/*.*"/>
			</fileset>
		</copy>	
		
		<antcall target="deployplugins">
			<param name="p_internal_name" value="codecompletion"/>
		</antcall>
	</target>
	
